<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Create <%= type.toUpperCase() %></title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/theme.css" rel="stylesheet">
    <link href="/css/video.css" rel="stylesheet">
    <link href="/css/docs.min.css" rel="stylesheet">
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/handlebars-v4.0.12.js"></script>
    <script src="/js/date-format.js"></script>
</head>
<body>
<% include ../component/header.ejs %>
<div class="container theme-showcase" role="main">
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation"><a href="/create/live">Live</a></li>
        <li role="presentation"><a href="/create/vod">Vod</a></li>
        <li role="presentation"><a href="/create/cloud">Cloud</a></li>
    </ul>

    <% if(type === 'live'){ %>
        <% include form/create-live.ejs %>
    <% }else if(type === 'vod'){ %>
        <% include form/create-vod.ejs %>
    <% }else if(type === 'cloud'){ %>
        <% include form/create-cloud.ejs %>
    <% } %>
</div>
<% include ../component/footer.ejs %>
<script>
    $("ul.nav-tabs").children().each(function () {
        console.log($(this).text())
        if ($(this).text().toLowerCase() === '<%= type %>') {
            console.log($(this));
            $(this).addClass('active');
        }
    });
</script>
</body>
</html>